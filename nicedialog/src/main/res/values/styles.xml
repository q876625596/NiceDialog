<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NiceDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--以下4个方向的插值器为加速减速-->
    <!--下方平移淡入淡出-->
    <style name="BottomTransAlphaADAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_trans_alpha_ad_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_trans_alpha_ad_exit_anim</item>
    </style>

    <!--上方平移淡入淡出-->
    <style name="TopTransAlphaADAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_trans_alpha_ad_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/top_trans_alpha_ad_exit_anim</item>
    </style>

    <!--左边平移淡入淡出-->
    <style name="LeftTransAlphaADAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_trans_alpha_ad_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/left_trans_alpha_ad_exit_anim</item>
    </style>

    <!--右边平移淡入淡出-->
    <style name="RightTransAlphaADAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/right_trans_alpha_ad_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/right_trans_alpha_ad_exit_anim</item>
    </style>

    <!--以下4个方向的插值器为加速-->
    <!--下方平移淡入淡出-->
    <style name="BottomTransAlphaAcceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_trans_alpha_acce_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_trans_alpha_acce_exit_anim</item>
    </style>

    <!--上方平移淡入淡出-->
    <style name="TopTransAlphaAcceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_trans_alpha_acce_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/top_trans_alpha_acce_exit_anim</item>
    </style>

    <!--左边平移淡入淡出-->
    <style name="LeftTransAlphaAcceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_trans_alpha_acce_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/left_trans_alpha_acce_exit_anim</item>
    </style>

    <!--右边平移淡入淡出-->
    <style name="RightTransAlphaAcceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/right_trans_alpha_acce_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/right_trans_alpha_acce_exit_anim</item>
    </style>

    <!--以下4个方向的插值器为减速-->
    <!--下方平移淡入淡出-->
    <style name="BottomTransAlphaDeceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_trans_alpha_dece_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_trans_alpha_dece_exit_anim</item>
    </style>

    <!--上方平移淡入淡出-->
    <style name="TopTransAlphaDeceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/top_trans_alpha_dece_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/top_trans_alpha_dece_exit_anim</item>
    </style>

    <!--左边平移淡入淡出-->
    <style name="LeftTransAlphaDeceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/left_trans_alpha_dece_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/left_trans_alpha_dece_exit_anim</item>
    </style>

    <!--右边平移淡入淡出-->
    <style name="RightTransAlphaDeceAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/right_trans_alpha_dece_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/right_trans_alpha_dece_exit_anim</item>
    </style>

    <!--淡入淡出-->
    <style name="AlphaEnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/alpha_exit_anim</item>
    </style>

    <!--先加速再减速的放大缩小-->
    <style name="ScaleEnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/scale_exit_anim</item>
    </style>

    <!--有回弹的放大缩小淡入淡出-->
    <style name="ScaleOverShootEnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_alpha_overshoot_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/scale_alpha_overshoot_exit_anim</item>
    </style>

    <!--放大缩小淡入淡出-->
    <style name="ScaleAlphaEnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_alpha_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/scale_alpha_exit_anim</item>
    </style>
</resources>