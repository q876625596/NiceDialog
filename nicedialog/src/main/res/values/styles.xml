<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NiceDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="DefaultAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/exit_anim</item>
    </style>

    <style name="AlphaEnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/alpha_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/alpha_exit_anim</item>
    </style>

    <style name="ScaleEnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/scale_exit_anim</item>
    </style>

    <style name="ScaleAlphaEnterExitAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_alpha_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/scale_alpha_exit_anim</item>
    </style>
</resources>